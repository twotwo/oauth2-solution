<link rel="stylesheet" type="text/css" href="{{context}}/stylesheets/sign-in-modules.css">

<form action="{{context}}/login" method="post" class="pure-form pure-form-stacked">
  <fieldset>
    <!-- Upper box with Title, username, and password -->
    <div class="upper-box">
      <!-- Title -->
      <div>
        <h1 class="title-padding">Authorization Server</h1>
      </div>
      <div class="pure-control-group">
        <!-- Username label and input -->
        <label class="labels" for="name">Username:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="name" type="text" placeholder="Hint: bob" name="username" />
        </div>
      </div>
      <div class="pure-control-group">
        <!-- Password label and input -->
        <label class="labels" for="password">Password:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="password" type="password" placeholder="Hint: secret" name="password" />
        </div>
      </div>
    </div>
    <!-- Bottom box with Sign in -->
    <div class="bottom-box">
      <div class="pure-controls sign-in-button">
        <button type="submit" value="Submit" class="pure-button pure-button-primary">Sign in</button>
      </div>
    </div>
  </fieldset>
</form>
<p>
  <small>Hint - bob:secret</small>
</p>
<p>
  <small>Hint - joe:password</small>
</p>